 <section id="add" class="container">
    <div class="form-wrap">
      <h1>Add A Class</h1>
      <p>Adding a class will share all discussion content with all users. Please write your exact course information!</p>
      {{#each errors}} 
      <div class="error">
      <p>{{text}}</p>
      </div>
      {{/each}}
      <form action="/classes/add" method="POST">
        <div class="input-group">
          <label for="title">Course Name</label>
          <input type="text" name="course_name" id="title" class="input-box" placeholder="eg. CS101, CS201A, ENG1A"
            maxlength="100" value={{course_name}}>
        </div>
        <div class="input-group">
          <label for="technologies">College/University</label>
          <input type="text" name="school" id="technologies" class="input-box" placeholder="eg. Foothill College, San Jose State University, De Anza College"
          maxlength="100" value={{ school }}>
        </div>
        <div class="input-group">
          <label for="budget">Teacher (Full name)</label>
          <input type="text" name="teacher" id="budget" class="input-box" placeholder="eg. Mary Payne, George Scott" max-length="100" value={{ teacher }}>
        </div>
    
        <input type="submit" value="Add Course" class="btn btn-reverse">
      </form>
    </div>
  </section>